<Window x:Class="PoliclinicWpf.View.ContentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PoliclinicWpf.View"
        xmlns:modelView="clr-namespace:PoliclinicWpf.ModelView"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Title="ContentWindow" Height="695" Width="805">
    <Window.DataContext>
        <modelView:MainWindowVM/>
    </Window.DataContext>
    <Grid>
        <Border Background="Gray" Margin="20">
            <ContentControl Content="{Binding Content, UpdateSourceTrigger=PropertyChanged}">
                
            </ContentControl>
        </Border>
    </Grid>
</Window>
